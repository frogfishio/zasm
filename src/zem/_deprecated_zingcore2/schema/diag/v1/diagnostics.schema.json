{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schema/diag/v1/diagnostics.schema.json",
  "title": "zingc diagnostics (v1)",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["severity", "message", "raw"],
    "properties": {
      "severity": {
        "type": "string",
        "enum": ["error", "warning", "note"]
      },
      "code": {
        "type": ["string", "null"]
      },
      "message": {
        "type": "string"
      },
      "file": {
        "type": ["string", "null"]
      },
      "line": {
        "type": ["integer", "null"],
        "minimum": 1
      },
      "col": {
        "type": ["integer", "null"],
        "minimum": 1
      },
      "raw": {
        "type": "string"
      }
    }
  }
}

